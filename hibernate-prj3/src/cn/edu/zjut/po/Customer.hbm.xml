<hibernate-mapping>
    <class name="cn.edu.zjut.po.Customer" table="customer"
           catalog="hibernatedb">
        <id name="customerId" type="int">
            <column name="customerID" />
            <generator class="increment" />
        </id>
        <property name="account" type="java.lang.String">
            <column name="account" length="20"/>
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" length="20"/>
        </property>
        <property name="repassword" type="java.lang.String">
            <column name="repassword" length="20"/>
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="20"/>
        </property>
        <property name="sex" type="java.lang.Boolean">
            <column name="sex"/>
        </property>
        <property name="sexStr" type="java.lang.String">
            <column name="sexStr" length="2"/>
        </property>
        <property name="birthday" type="java.util.Date">
            <column name="birthday"/>
        </property>
        <property name="email" type="java.lang.String">
            <column name="email"/>
        </property>
        <one-to-one name="addressid" class="cn.edu.zjut.po.Address" cascade="all" property-ref="cust_id"/>
    </class>
</hibernate-mapping>